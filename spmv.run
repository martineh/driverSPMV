#!/bin/bash

#------------------------------------------------------------
# Minimum Time
#------------------------------------------------------------
TMIN=2.0
#------------------------------------------------------------

#------------------------------------------------------------
# Validation = Enable (T) , Disable (F)
#------------------------------------------------------------
TEST=T
#------------------------------------------------------------

#------------------------------------------------------------
# Matrix Path
#------------------------------------------------------------
PATH="matrix"
#------------------------------------------------------------

#------------------------------------------------------------
# Output Path
#------------------------------------------------------------
LOGS="logs"
#------------------------------------------------------------

/usr/bin/mkdir -p $LOGS

id=$(/usr/bin/ls $LOGS | /usr/bin/wc -l)
LOGS=$LOGS"/log_"$id".csv"

/usr/bin/taskset -c 0 ./build/spmv_driver $TMIN $TEST $PATH $LOGS

